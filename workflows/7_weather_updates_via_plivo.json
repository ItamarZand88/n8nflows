{
  "id": "7",
  "title": "Automate daily weather updates via SMS using Plivo",
  "description": "Triggers every morning at 9 AM to fetch the current temperature in Berlin and sends it as an SMS notification using Plivo.",
  "filename": "7_weather_updates_via_plivo",
  "services": [
    "Cron",
    "OpenWeatherMap",
    "Plivo"
  ],
  "categories": [
    "Communication",
    "Core Nodes",
    "Development",
    "Miscellaneous",
    "Utility"
  ],
  "difficulty": "Beginner",
  "triggers": [],
  "actions": [],
  "setup_requirements": [
    "OpenWeatherMap API Key",
    "Plivo API Key"
  ],
  "content": {
    "nodes": [
      {
        "name": "Plivo",
        "type": "n8n-nodes-base.plivo",
        "position": [
          1030,
          400
        ],
        "parameters": {
          "message": "=Hey! The temperature outside is {{$node[\"OpenWeatherMap\"].json[\"main\"][\"temp\"]}}Â°C."
        },
        "credentials": {
          "plivoApi": "Plivo API Credentials"
        },
        "typeVersion": 1
      },
      {
        "name": "OpenWeatherMap",
        "type": "n8n-nodes-base.openWeatherMap",
        "position": [
          830,
          400
        ],
        "parameters": {
          "cityName": "berlin"
        },
        "credentials": {
          "openWeatherMapApi": "owm"
        },
        "typeVersion": 1
      },
      {
        "name": "Cron",
        "type": "n8n-nodes-base.cron",
        "position": [
          630,
          400
        ],
        "parameters": {
          "triggerTimes": {
            "item": [
              {
                "hour": 9
              }
            ]
          }
        },
        "typeVersion": 1
      }
    ],
    "connections": {
      "Cron": {
        "main": [
          [
            {
              "node": "OpenWeatherMap",
              "type": "main",
              "index": 0
            }
          ]
        ]
      },
      "OpenWeatherMap": {
        "main": [
          [
            {
              "node": "Plivo",
              "type": "main",
              "index": 0
            }
          ]
        ]
      }
    }
  }
}